<% if notice %>
	<div class='alert alert-success'><%= notice %></div>
<% elsif alert %>
	<div class='alert alert-danger'><%= alert %></div>
<% end %>
<div class="row">
	<div class="col-lg-12">
		<% if @periodo_atual.nil? or @periodo_atual.termino < DateTime.now %>
			<div class="panel panel-default">
				<div class="panel-heading">
					<h3> Novo Período </h3>
				</div>
				<!-- /.panel-heading -->
				<div class="panel-body">
					<%= render 'form' %>
				</div>
				<!-- /.panel-body -->
			</div>
		<% else %>

		<% end %>
		<!-- /.panel -->
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3> Todos os Períodos </h3>
			</div>
			<!-- /.panel-heading -->
			<div class="panel-body">
				<div class="row">
					<div class="col-lg-12">
						<div class="table-responsive teste">
							<table class="table table-hover">
								<thead>
									<tr>
										<th>
											<ol class="breadcrumb">
												<li> Início dos Envios dos Trabalho </li>
											</ol>
										</th>
										<th>
											<ol class="breadcrumb">
												<li> Fim dos Envios dos Trabalhos </li>
											</ol>
										</th>
										<th>
											<ol class="breadcrumb">
												<li> Fim das Avaliações pelos Professores </li>
											</ol>
										</th>
										<th></th>
									</tr>
								</thead>
								<% @admin_periodos.each do |admin_periodo| %>
									<tbody>
										<tr>
											<td><%= admin_periodo.inicio.strftime("%d/%m/%Y ") %><span class="text-muted small"><em><%= admin_periodo.termino.strftime(" %I:%M%p") %></em></td>
											<td><%= admin_periodo.termino.strftime("%d/%m/%Y ") %><span class="text-muted small"><em><%= admin_periodo.termino.strftime(" %I:%M%p") %></em></td>
											<td><%= admin_periodo.termino_avaliacao.strftime("%d/%m/%Y ") %><span class="text-muted small"><em><%= admin_periodo.termino_avaliacao.strftime(" %I:%M%p") %></em></td>
											<% # link_to 'Edit', edit_admin_periodo_path(admin_periodo) %>
											<% if admin_periodo.termino == @periodo_atual.termino%>
												<td><%= link_to 'Apagar Período', admin_periodo_path(admin_periodo), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
												<td><%= link_to 'Abrir Exceção', edit_admin_periodo_path(admin_periodo), class: "btn btn-info" %></td>
											<% else %>
												<td><%= link_to 'Apagar Período', admin_periodo_path(admin_periodo), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger pull-right" %></td>
											<% end %>
										</tr>
									</tbody>
								<% end %>
							</table>
						</div>
						<!-- /.table-responsive -->
					</div>
					<!-- /.col-lg-4 (nested) -->
				</div>
				<!-- /.row -->
			</div>
			<!-- /.panel-body -->
		</div>
		<!-- /.panel -->
	</div>
	<!-- /.col-lg-8 -->
</div>
<br>
