<%= form_for ([:admin, trabalho]) do |t| %>
    <% if t.object.estado == "Recebido do Aluno" %>
        <div class="panel-body">
            <div role="form">
                <div class="form-group">                            
                    
                    <%= t.select :orientador, options_for_select(@professores.collect{ |p| [p.nome, p.email] }) %>
                    <%= t.select :banca_1, options_for_select(@professores.collect{ |p| [p.nome, p.email] }) %>
                    <%= t.select :banca_2, options_for_select(@professores.collect{ |p| [p.nome, p.email] }) %>

                </div>
            </div>
            <button type="button" class="btn btn-info">
                <%= link_to "Novo Professor", admin_professores_path %>
                <span class="glyphicon glyphicon-user"></span>
            </button>
            <button type="button" class="btn btn-info">
                <%= link_to "Editar", admin_professores_path %>
                <span class="glyphicon glyphicon-edit"></span> 
            </button>
            
            <%= t.submit "Enviar para Avaliacao", class: 'btn btn-primary pull-right' %>
        </div>
    <% elsif t.object.estado == "Enviado para Avaliação" %>
        <div class="form-group">
        <h2>List Group With Badges</h2>
        <ul class="list-group">
            <li class="list-group-item"><%= t.object.banca_1.nome %> <span class="badge">12</span></li>
            <li class="list-group-item">Deleted <span class="badge">5</span></li>
            <li class="list-group-item">Warnings <span class="badge">3</span></li>
        </ul>
        </div>
        <%= t.submit "Enviar para Avaliacao", class: 'btn btn-primary pull-right' %>
    <% end %>
<% end %>
