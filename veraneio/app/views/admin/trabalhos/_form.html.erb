<%= form_for ([:admin, trabalho]) do |t| %>
    <% if t.object.estado == "Recebido do Aluno" %>
        <div class="panel-body">
            <div role="form">
                <div class="form-group">                            
                    <label> Orientador </label>
			        <%= t.select :orientador, options_for_select([t.object.orientador.nome]), {}, { class: "form form-group form-control" } %>
                    <label> Banca 1 </label>
                    <%= t.select :banca_1, options_for_select(@professores.collect{ |p| [p.nome, p.email] }), {}, { class: "form form-group form-control" } %>
                    <label> Banca 2 </label>
                    <%= t.select :banca_2, options_for_select(@professores.collect{ |p| [p.nome, p.email] }), {}, { class: "form form-group form-control" } %>

                </div>
            </div>
            
            <%= link_to "Novo Professor", admin_professores_path, class: "btn btn-info" %>
            <%= link_to "Editar", admin_professores_path, class: "btn btn-info" %> 
            <%= t.submit "Enviar para Avaliacao", class: 'form-group btn btn-primary pull-right' %>
        </div>
    <% elsif t.object.estado == "Enviado para Avaliação" %>
        <div class="col-lg-4 col-md-6 form-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <span class="badge">12</span>
                        </div>
                        <div class="col-xs-9 text-left">
                            <h4>Orientador</h4>
                            <% if t.object.orientador.nil? %>
                                <h4> Sem Professores </h4>
                            <% else %>
                                <h4><%= t.object.orientador.nome %></h4>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 form-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <span class="badge">5</span>
                        </div>
                        <div class="col-xs-9 text-left">
                            <h4>Banca 1</h4>
                            <% if t.object.banca_1.nil? %>
                                <h4> Sem professores </h4>
                            <% else %>
                                <h4><%= t.object.banca_1.nome %></h4>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6 form-group">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <span class="badge">3</span>
                        </div>
                        <div class="col-xs-9 text-left">
                            <h4>Banca 2</h4>
                            <% if t.object.banca_2.nil? %>
                                <h4> Sem professores </h4>
                            <% else %>
                                <h4><%= t.object.banca_2.nome %></h4>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel-body">
            <%= t.submit "Enviar para Avaliacao", class: 'form-group btn btn-primary pull-right' %>
        </div>
    <% end %>
<% end %>
