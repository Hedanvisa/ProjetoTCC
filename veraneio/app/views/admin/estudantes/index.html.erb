<% if notice %>
    <div class='alert alert-success'><%= notice %></div>
<% elsif alert %>
    <div class='alert alert-danger'><%= alert %></div>
<% end %>

<div class="panel-group" id="accordion">
    <div class="panel panel-default">
        <div class="panel-heading ca">
            <h4 class="panel-title">
                <a data-toggle="collapse" data-parent="#accordion" href="#accord1" class="cabecalho">
                    <h2> Importar alunos </h2>
                </a>
            </h4>
        </div>
        <div id="accord1" class="panel-collapse collapse out">
            <div class="panel-body">
                <%= render 'admin/estudantes/import' %>
            </div>
        </div>
    </div>
</div>
<div class="panel-group" id="accordion">
  <% @estudantes.each do |estudante| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#<%=estudante.id %>" class="cabecalho">
            <ol class="breadcrumb"> 
              <li><%= estudante.ra %></li>
              <li><%= estudante.nome %></li>
              <li><%= estudante.email %></li>
            </ol>
          </a>
        </h4>
      </div>
      <div id="<%=estudante.id %>" class="panel-collapse collapse out">
        <div class="panel-body">
          <%= render 'form' , estudante: estudante %>
        </div>
      </div>
    </div>
  <% end %>
</div>
