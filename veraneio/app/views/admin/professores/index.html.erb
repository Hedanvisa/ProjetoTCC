<div class="panel-group" id="accordion2">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion2" href="#a">
            <ol class="breadcrumb"> 
              <li>Novo Professor</li>
            </ol>
          </a>
        </h4>
      </div>
      <div id="#a" class="panel-collapse collapse in">
        <div class="panel-body">
          <%= render 'professores/form' %>
        </div>
      </div>
    </div>
</div>

<div class="panel-group" id="accordion">
  <% @professores.each do |professor| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#<%=professor.id %>">
            <ol class="breadcrumb"> 
              <li><%= professor.nome %></li>
              <li><%= professor.email %></li>
            </ol>
          </a>
        </h4>
      </div>
      <div id="<%=professor.id %>" class="panel-collapse collapse out">
        <div class="panel-body">
          <%= render 'admin/professores/form' , professor: professor %>
        </div>
		<div class="btn btn-danger pull-right">
			<%= link_to "Excluir",admin_professor_path(professor), method: :delete, data:{confirm: "Tem Certeza?"} %>
		</div>
      </div>
    </div>
  <% end %>
</div>
