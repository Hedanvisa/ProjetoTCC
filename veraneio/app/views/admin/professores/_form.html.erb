<%= form_for ([:admin, professor]) do |p| %>
	<div class='form-group'>
		<%= p.label :nome %>
		<%= p.text_field :nome, class: 'form_control'  %>
	</div>

	<div class='form-group'>
		<%= p.label :email %>
		<%= p.email_field :email, class: 'form_control' %>
	</div>
	<button type="button" class="btn btn-danger pull-right"><%= link_to "Excluir",admin_professor_path(professor), method: :delete, data:{confirm: "Tem Certeza?"} %></button>
	<%= p.submit class: "btn btn-primary" %>
<% end %>
