<div class="panel-group" id="accordion">
  <% @professores.each do |professor| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#<%=professor.id %>">
			  <%= professor.nome %>
			  <%= professor.email %>
			  <div class="btn">
				  <%= link_to "Editar", edit_admin_professor_path(professor.id)%>
			  </div>
          </a>
        </h4>
      </div>
      <div id="<%=professor.id %>" class="panel-collapse collapse in">
        <div class="panel-body">
          <button class="btn btn-default btn-pressure pull-right">Salvar Alteracoes</button>
        </div>
      </div>
    </div>
  <% end %>
</div>
