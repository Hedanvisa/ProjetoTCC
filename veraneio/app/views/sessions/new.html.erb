<div class='page-header'>
	<h2>Log in</h2>
</div>

<%if !esta_periodo_aberto?%>
	<div class="alert alert-warning">
		O período de Cadastros e Envios acabou, não será possivel atualizar ou enviar seu trabalho.
	</div>
<% end %>

<% if notice %>
	<div class='alert alert-success'>
		<%= notice %>
	</div>
<% elsif alert %>
	<div class='alert alert-danger'>
		<%= alert %>
	</div>
<% end %>


<%= form_for :session, url: login_path, class: 'form-signin' do |f| %>
	<div class='form-group'>
		<%= f.label :email %>
		<%= f.email_field :email, class: 'form-control' %>
	</div>
	<div class='form-group'>
		<%= f.label :password %>
		<%= f.password_field :password, class: 'form-control' %>
	</div>
	<%= f.submit 'Log In', class: 'btn btn-primary' %>
	<% if esta_periodo_aberto?%>
		<%= link_to 'Cadastre-se', cadastro_path, class: 'btn btn-primary' %>
	<% else %>
	 <div class='btn btn-primary disabled'>Cadastre-se</div>
	<% end %>

<% end %>
